{
  "name": "spotify-follow-manager",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build",
    "build:standalone": "NEXT_DISABLE_ESLINT=1 NEXT_DISABLE_TYPE_CHECK=1 NEXT_STANDALONE=true next build",
    "dev:local": "NODE_OPTIONS=--no-warnings dotenv -e .env.local -- next dev --turbo",
    "check": "next lint && tsc --noEmit",
    "db:generate": "dotenv -e .env.local -- prisma migrate dev",
    "db:migrate": "dotenv -e .env.local -- prisma migrate deploy",
    "db:push": "dotenv -e .env.local -- prisma db push",
    "db:setup": "bash start-database.sh && yarn db:push",
    "db:studio": "dotenv -e .env.local -- prisma studio",
    "dev": "dotenv -e .env.local -- next dev --turbo",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "postinstall": "prisma generate",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "preview": "dotenv -e .env.local -- next build && next start",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "amplify:init:dev": "dotenv -e .env.dev -o -- amplify pull --appId $AMPLIFY_APP_ID --envName dev --yes",
    "amplify:init:prod": "dotenv -e .env.prod -o -- amplify init --appId $AMPLIFY_APP_ID --envName prod --yes",
    "amplify:publish:dev": "dotenv -e .env.dev -o -- amplify publish --yes",
    "amplify:publish:prod": "dotenv -e .env.prod -o -- amplify publish --yes",
    "infra:synth": "yarn --cwd infrastructure synth",
    "infra:deploy:dev": "dotenv -e .env.dev -o -- yarn --cwd infrastructure deploy --outputs-file ../infra-outputs.json",
    "infra:deploy:prod": "dotenv -e .env.prod -o -- yarn --cwd infrastructure deploy --outputs-file ../infra-outputs.json",
    "deploy:dev": "dotenv -e .env.dev -o -- sh -c 'yarn infra:deploy:dev && node scripts/clean-webhooks.js dev && aws amplify start-job --app-id $AMPLIFY_APP_ID --branch-name main --job-type RELEASE --commit-id HEAD'",
    "deploy:prod": "dotenv -e .env.prod -o -- sh -c 'yarn infra:deploy:prod && node scripts/clean-webhooks.js prod && aws amplify start-job --app-id $AMPLIFY_APP_ID --branch-name main --job-type RELEASE --commit-id HEAD'"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.7.2",
    "@aws-sdk/client-secrets-manager": "^3.806.0",
    "@eslint/eslintrc": "^3.3.1",
    "@prisma/client": "^6.5.0",
    "@t3-oss/env-nextjs": "^0.12.0",
    "@tailwindcss/postcss": "^4.1.6",
    "@tanstack/react-query": "^5.69.0",
    "@trpc/client": "^11.0.0",
    "@trpc/react-query": "^11.0.0",
    "@trpc/server": "^11.0.0",
    "@types/node": "^22.15.17",
    "@types/react": "^19.1.3",
    "framer-motion": "^12.10.1",
    "next": "^15.2.3",
    "next-auth": "5.0.0-beta.25",
    "postcss": "^8.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "server-only": "^0.0.1",
    "superjson": "^2.2.1",
    "tailwindcss": "^4.1.6",
    "typescript-eslint": "^8.32.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.23.0",
    "eslint-config-next": "^15.2.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "prisma": "^6.5.0",
    "typescript": "^5.8.2"
  },
  "ct3aMetadata": {
    "initVersion": "7.39.3"
  },
  "packageManager": "yarn@1.22.22"
}
